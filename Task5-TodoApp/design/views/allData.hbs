{{>navbar}}
{{#if len}}
<table class="table table-stripped text-center container">
<thead>
    <th>_id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
</thead>
<tbody>
    {{#each data}}
    <tr>
        <td>{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>
        <a href="/showsingle/{{this._id}}" class="m-1 btn btn-success">show</a>
        <a href="/delete/{{this._id}}" class="m-1 btn btn-success">delete</a>
        <a href="/edit/{{this._id}}" class="m-1 btn btn-success">edit</a>
    </td>
    </tr>
    {{/each}}
</tbody>
</table>
{{else}}
<div class="alert alert-danger">
No Tasks Found
</div>
{{/if}}
